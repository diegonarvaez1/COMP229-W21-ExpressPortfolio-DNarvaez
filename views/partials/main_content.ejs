<!--Main Content Section-->


    <!--if user is in 'Home' page-->
  <% if (title == 'Home'){ %>
  
    <main class="container">
        <div class="jumbotron">
          <h1 class="display-4">1Welcome to the <%= title %> page!</h1>
    
          <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
          <hr class="my-4">
          <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
    
          <p class="lead">
            <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
          </p>
    
        </div>
      </main>
      
    <% } %> 


    <!--if user is in 'About Me' page-->
    <% if (title == 'About Me'){ %>
  
        <main class="container">
            <div class="jumbotron">
              <h1 class="display-4"> Diego Narvaez </h1>
              <p class="lead">Artificial Intelligence Student at Centennial College - Toronto, Canada</p>
              <hr class="my-4">

              <!--My info-->
              <div class="container">
                  <div class="row">
                    <div class="col-8">
                        <p>My bio</p>
                    </div>

                    <div class="col-4">
                        <img class="card-img-top" src="/Assets/images/blockchain-thumbnail.jpg" alt="Blockchain thumbnail">
                    </div>

                  </div>
                

              </div>
             
        
              
        
            </div>
          </main>
          
        <% } %> 

    <!--if user is in 'Projects' page-->
    <% if (title == 'Projects'){ %>
  
    <main class="container">
        <div class="jumbotron">
          <h1 class="display-4">My <%= title %> </h1>
    
          <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
          <hr class="my-4">
          
         <!--My Projects Carousel-->
         <div id="projectCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselIndicators" data-slide-to="1"></li>
              <li data-target="#carouselIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="..." alt="First Project">
                <div class="carousel-caption d-none d-md-block">
                  <h5>Airtime!</h5>
                  <p>Airtime is a celebrity cameo marketplace.</p>
                </div>
              </div>
              <div class="carousel-item">
                <img src="..." alt="Second Project">
                <div class="carousel-caption d-none d-md-block">
                  <h5>Dixie</h5>
                  <p>Dixie is my blockchain artist name.</p>
                </div>
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="..." alt="Third project">
              </div>
            </div>
            <!--Previous and Next buttons for my projects carousel-->
            <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>



        </div>
      </main>
      
    <% } %> 

    <!--if user is in 'Services' page-->
    <% if (title == 'Services'){ %>
  
        <main class="container">
            <div class="jumbotron">
              <h1 class="display-4"> <%= title %> </h1>
        
              <p class="lead">I provide the following services with top-notch quality work:</p>
              <hr class="my-4">
              
              <!--My Services-->
              <div class="card-deck">
                <div class="card">
                  <img class="card-img-top" src="/Assets/images/webdesign-thumbnail.jpg" alt="Web design thumbnail">
                  <div class="card-body">
                    <h5 class="card-title">Web Development</h5>
                    <p class="card-text">.</p>
                    <p class="card-text"><small class="text-muted">Most required by clients</small></p>
                  </div>
                </div>
                <div class="card">
                  <img class="card-img-top" src="/Assets/images/mobiledev-thumbnail.jpg" alt="App development thumbnail">
                  <div class="card-body">
                    <h5 class="card-title">App Development</h5>
                    <p class="card-text">.</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                  </div>
                </div>
                <div class="card">
                  <img class="card-img-top" src="/Assets/images/blockchain-thumbnail.jpg" alt="Blockchain thumbnail">
                  <div class="card-body">
                    <h5 class="card-title">Intro to Blockchain Technology</h5>
                    <p class="card-text">.</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                  </div>
                </div>
              </div>
        
            </div>
          </main>
          
        <% } %> 

    <!--if user is in 'Contact Me' page-->
    <% if (title == 'Contact Me'){ %>
  
    <main class="container">
        <div class="jumbotron">
          <h1 class="display-4"> <%= title %> </h1>
    
          <p class="lead">Please leave your contact info below so I can contact you with further information.</p>
          <hr class="my-4">

          <!--Contact form-->
          <form>
            <div class="form-group">
              <label for="exampleFormControlInput1">Your Email: </label>
              <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="batman@batmail.com">
            </div>
            <div class="form-group">
              <label for="exampleFormControlSelect1">Service you are interested in: </label>
              <select class="form-control" id="exampleFormControlSelect1">
                <option>Web Development</option>
                <option>App Development</option>
                <option>Intro to blockchain technology</option>
                <option>None</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="exampleFormControlTextarea1">Your Message: </label>
              <textarea class="form-control" id="exampleFormControlTextarea1" rows="4"></textarea>
            </div>
          </form>
    
          <p class="lead">
            <a class="btn btn-primary btn-lg" href="#" role="button">Submit</a>
          </p>
    
        </div>
      </main>
      
    <% } %> 